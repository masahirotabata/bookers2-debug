
  
   <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'users/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'books/show',book: @book_show %>
    </div>
    </div>
    <table class='table table-hover table-inverse'>
       <thead>
       </thead>
       <tbody>
        <tr>
     <% @posts.each do|post| %>
      <td><%= post.comment %></td>
      <td><%= link_to 'Destroy',book_post_comment_path(book_id: @book_show.id,id: post.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{post.id}"%>
      <div class='col-md-8 offset-md-1'>
        <% end %>
      </td>
     </tr>
    </tbody>
   </table>
   
   <div class='col-md-8 offset-md-1'>
  <tbody><%= form_with(model:[@book,@post_comments],url: book_post_comments_path(book_id: @book_show.id,id: @book_show.id), local:true) do |f| %>
  <%= render 'layouts/errors', obj: f.object  %>
  <%= f.text_area :comment %>
  <%= f.submit '送信' %>
<% end %>
  </tbody>
 </div>
</div>
  